<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="4dp"
    android:paddingTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/header1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hplayerone"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/header1"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/hplayertwo"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/hplayerone"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/hplayerthree"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/hplayertwo"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/hplayerfour"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/hplayerthree"
        android:text="TextView"
        android:textColor="@android:color/black" />
</RelativeLayout>
