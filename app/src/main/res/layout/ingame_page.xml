<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.example.pandamove.yatzy"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/background_light"
        android:orientation="horizontal"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/currentPlayer"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/currentplayerscore"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/currentPlayer"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/leaderBoard"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/playerLeader"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/rounds"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:text="Leaderboard"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_toStartOf="@+id/currentPlayer" />

                    <TextView
                        android:id="@+id/playerLeader"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/playerSecond"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/playerSecond"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/playerThird"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/playerThird"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/playerForth"
                        android:layout_alignStart="@+id/playerSecond"
                        android:layout_marginStart="0dp"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/playerForth"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/playerThird"
                        android:textColor="@android:color/background_light"
                        android:layout_below="@+id/currentplayerscore" />

                    <TextView
                        android:id="@+id/rounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/leadingPlayerScore"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/playerLeader"
                        android:layout_alignTop="@+id/playerLeader"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/playerLeader"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/seondPlayerScore"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/playerSecond"
                        android:layout_alignTop="@+id/playerSecond"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/playerLeader"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/thirdPlayerScore"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/playerThird"
                        android:layout_alignTop="@+id/playerThird"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/playerLeader"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/fourthPlayerScore"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/playerForth"
                        android:layout_alignTop="@+id/playerForth"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/playerForth"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView86"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView90"
                        android:layout_below="@+id/roundText"
                        android:gravity="center"
                        android:text="Of"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView92"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView90"
                        android:layout_below="@+id/textView86"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/roundText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView86"
                        android:layout_below="@+id/textView90"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView90"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/leaderBoard"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="Round"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/totalNumberThrows"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/rollOfText"
                        android:layout_alignBottom="@+id/rollOfText"
                        android:layout_marginEnd="55dp"
                        android:layout_toEndOf="@+id/rollOfText"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/rollOfText"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/thrownumber"
                        android:layout_alignBottom="@+id/thrownumber"
                        android:layout_toEndOf="@+id/thrownumber"
                        android:gravity="center"
                        android:text="of"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/thrownumber"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/rollText"
                        android:layout_alignBottom="@+id/rollText"
                        android:layout_toEndOf="@+id/rollText"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/rollText"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/currentplayerscore"
                        android:layout_marginBottom="74dp"
                        android:layout_marginStart="10dp"
                        android:text="Roll"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </RelativeLayout>


                <Button
                    android:id="@+id/throwButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="55dp"
                    android:text="Roll"
                    android:layout_above="@+id/buttonScore"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/buttonScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="11dp"
                    android:layout_toEndOf="@+id/s_diceFour"
                    android:text="Score" />

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/throwButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="38dp">

                    <view
                        android:id="@+id/dicesurface5"
                        class="com.example.pandamove.yatzy.DiceSurfaceView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/dicesurface2"
                        android:layout_centerHorizontal="true"
                        android:layout_toEndOf="@+id/dicesurface4" />

                    <view
                        android:id="@+id/dicesurface6"
                        class="com.example.pandamove.yatzy.DiceSurfaceView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/dicesurface3"
                        android:layout_toEndOf="@+id/dicesurface5" />

                    <view
                        android:id="@+id/dicesurface4"
                        class="com.example.pandamove.yatzy.DiceSurfaceView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignStart="@+id/dicesurface"
                        android:layout_below="@+id/dicesurface" />

                    <view
                        android:id="@+id/dicesurface"
                        class="com.example.pandamove.yatzy.DiceSurfaceView"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:visibility="invisible" />

                    <view
                        android:id="@+id/dicesurface2"
                        class="com.example.pandamove.yatzy.DiceSurfaceView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_toEndOf="@+id/dicesurface" />

                    <view
                        android:id="@+id/dicesurface3"
                        class="com.example.pandamove.yatzy.DiceSurfaceView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_toEndOf="@+id/dicesurface2" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
