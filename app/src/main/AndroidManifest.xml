<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pandamove.yatzy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        >
        <activity android:name=".activities.StartActivity"
            android:configChanges="orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.GameActivity"
            android:configChanges="orientation|screenSize"
            >
        </activity>
        <activity android:name=".activities.EndActivity"
            android:configChanges="orientation|screenSize"
            >
        </activity>
        <activity android:name=".EndGameActivity"
            android:configChanges="orientation|screenSize"
            >
        </activity>
        <activity android:name=".activities.ScoreViewActivity"
            android:configChanges="orientation|screenSize"
            >
        </activity>
    </application>

</manifest>
